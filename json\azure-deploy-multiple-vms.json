{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmCount": {
            "type": "int",
            "defaultValue": 21
        },
        "buildVersion": {
            "type": "string"
        },
        "azureSubID": {
            "type": "string"
        },
        "virtualMachineRG": {
            "type": "string"
        },
        "virtualMachineNamePrefix": {
            "type": "string"
        },
        "virtualMachineSize": {
            "type": "string"
        },
        "virtualNetworkRG": {
            "type": "string"
        },
        "virtualNetworkName": {
            "type": "string"
        },
        "networkInterfaceNamePrefix": {
            "type": "string"
        },
        "adminUsername": {
            "type": "string"
        },
        "adminPassword": {
            "type": "secureString"
        }
    },
    "variables": {
        "vnetId": "[concat('/subscriptions/',parameters('azureSubID'),'/resourceGroups/',parameters('virtualNetworkRG'),'/providers/Microsoft.Network/virtualNetworks/',parameters('virtualNetworkName'))]",
        "vnetName": "[last(split(variables('vnetId'), '/'))]",
        "subnetRef": "[concat(variables('vnetId'), '/subnets/Subnet-1')]"
    },
    "resources": [
        {
            "copy": {
                "name": "nicCopy",
                "count": "[parameters('vmCount')]"
            },
            "name": "[concat(parameters('networkInterfaceNamePrefix'), copyIndex(1))]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2021-03-01",
            "location": "westus2",
            "dependsOn": [],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            },
                            "privateIPAllocationMethod": "Dynamic"
                        }
                    }
                ]
            },
            "tags": {
                "Build": "[parameters('buildVersion')]"
            }
        },
        {
            "copy": {
                "name": "nodeCopy",
                "count": "[parameters('vmCount')]"
            },
            "name": "[concat(parameters('virtualMachineNamePrefix'), copyIndex(1))]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2021-07-01",
            "location": "westus2",
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', parameters('networkInterfaceNamePrefix'), copyIndex(1))]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('virtualMachineSize')]"
                },
                "storageProfile": {
                    "osDisk": {
                        "createOption": "fromImage",
                        "managedDisk": {
                            "storageAccountType": "Premium_LRS"
                        }
                    },
                    "imageReference": {
                        "id": "[concat('/subscriptions/',parameters('azureSubID'),'/resourceGroups/',parameters('virtualMachineRG'),'/providers/Microsoft.Compute/images/',parameters('buildVersion'))]"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', parameters('networkInterfaceNamePrefix'), copyIndex(1))]"
                        }
                    ]
                },
                "osProfile": {
                    "computerName": "[concat(parameters('virtualMachineNamePrefix'), copyIndex(1))]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]",
                    "windowsConfiguration": {
                        "enableAutomaticUpdates": false,
                        "provisionVmAgent": true,
                        "patchSettings": {
                            "enableHotpatching": false,
                            "patchMode": "Manual"
                        }
                    }
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true
                    }
                }
            },
            "tags": {
                "Build": "[parameters('buildVersion')]"
            },
            "zones": [
                "1"
            ]
        }
    ],
    "outputs": {
        "adminUsername": {
            "type": "string",
            "value": "[parameters('adminUsername')]"
        }
    }
}
